<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraActivity">

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="312dp"
        android:text="Usuario"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />


    <TextView
        android:id="@+id/tvHistorico"
        android:layout_width="341dp"
        android:layout_height="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="28dp"
        android:textAlignment="viewEnd"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="378dp"
        android:layout_height="115dp"
        android:layout_marginTop="52dp"

        android:gravity="bottom"
        android:padding="12dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textFontWeight="700"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="395dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="714dp" />

    <GridLayout
        android:layout_width="378dp"
        android:layout_height="492dp"
        android:columnCount="4"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927">

        <Button
            android:id="@+id/btC"
            style="@style/Boton"
            android:layout_row="0"
            android:layout_column="0"
            android:text="C"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/btMasMenos"
            style="@style/Boton"
            android:layout_row="0"
            android:layout_column="1"
            android:text="+-"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/btDividir"
            style="@style/Boton"
            android:layout_row="0"
            android:layout_column="2"
            android:text="/"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/btMultiplicar"
            style="@style/Boton"
            android:layout_row="0"
            android:layout_column="3"
            android:text="X"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt7"
            style="@style/Boton"
            android:text="7"
            android:layout_row="1"
            android:layout_column="0"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt8"
            style="@style/Boton"
            android:layout_row="1"
            android:layout_column="1"
            android:text="8"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt9"
            style="@style/Boton"
            android:layout_row="1"
            android:layout_column="2"
            android:text="9"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/btRestar"
            style="@style/Boton"
            android:layout_row="1"
            android:layout_column="3"
            android:text="-"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt4"
            style="@style/Boton"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt5"
            style="@style/Boton"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt6"
            style="@style/Boton"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/btSumar"
            style="@style/Boton"
            android:layout_row="2"
            android:layout_column="3"
            android:text="+"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt1"
            style="@style/Boton"
            android:layout_row="3"
            android:layout_column="0"
            android:text="1"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt2"
            style="@style/Boton"
            android:layout_row="3"
            android:layout_column="1"
            android:text="2"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt3"
            style="@style/Boton"
            android:layout_row="3"
            android:layout_column="2"
            android:text="3"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/bt0"
            style="@style/Boton"
            android:layout_row="4"
            android:layout_column="1"
            android:text="0"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/btPunto"
            style="@style/Boton"
            android:layout_row="4"
            android:layout_column="2"
            android:text="."
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/btResultado"
            android:layout_width="80dp"
            android:layout_height="172dp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="="
            android:textAlignment="center"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="437dp" />


    </GridLayout>

    <Button
        android:id="@+id/btBorrar"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="39dp"
        android:text="borrar"
        android:textSize="6sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>