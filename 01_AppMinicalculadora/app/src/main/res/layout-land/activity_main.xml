<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:overScrollMode="ifContentScrolls">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:text="Calculadora"
        android:textColor="@color/white"
        android:textSize="24sp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40sp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numero1"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="30sp"/>

                <EditText
                    android:id="@+id/campo1"
                    android:layout_width="120sp"
                    android:layout_height="43dp"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:inputType="numberDecimal"
                    android:padding="10sp"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="256dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numero2"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="30sp"/>

                <EditText
                    android:id="@+id/campo2"
                    android:layout_width="120sp"
                    android:textColor="@color/black"
                    android:layout_height="43sp"
                    android:layout_gravity=""
                    android:layout_marginTop="5sp"
                    android:background="@color/white"
                    android:inputType="numberDecimal"
                    android:padding="10sp"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30sp"
                    android:text="Resultado"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/campoResultado"
                    android:layout_width="120sp"
                    android:layout_height="43sp"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginTop="5sp"
                    android:background="@color/white"
                    android:padding="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="20sp"
                android:orientation="horizontal"
                android:padding="20sp">

                <Button
                    android:id="@+id/btSumar"
                    android:layout_width="60sp"
                    android:layout_height="65sp"
                    android:backgroundTint="@color/dcr_red"
                    android:text="+"
                    android:textSize="25dp"
                    android:layout_margin="10sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btRestar"
                    android:layout_width="60dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@color/dcr_red"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="10sp"/>

                <Button
                    android:id="@+id/btMulti"
                    android:layout_width="60sp"
                    android:layout_height="65sp"
                    android:backgroundTint="@color/dcr_red"
                    android:text="x"
                    android:textSize="25dp"
                    android:layout_margin="10sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btDivid"
                    android:layout_width="60sp"
                    android:layout_height="65sp"
                    android:backgroundTint="@color/dcr_red"
                    android:text="/"
                    android:textSize="25dp"
                    android:layout_margin="10sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btPoten"
                    android:layout_width="60sp"
                    android:layout_height="65sp"
                    android:backgroundTint="@color/dcr_red"
                    android:text="^"
                    android:textSize="25dp"
                    android:layout_margin="10sp"
                    android:textColor="@color/white"/>
            </LinearLayout>


        </LinearLayout>



    </ScrollView>




</LinearLayout>